generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Contact {
  id        Int      @id @default(autoincrement())
  fullName  String
  email     String
  message   String
  createdAt DateTime @default(now())
}

model Client {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  goal      String
  startDate DateTime
  createdAt DateTime  @default(now())
  bookings  Booking[]
}

model Testimonial {
  id          Int      @id @default(autoincrement())
  clientName  String
  content     String
  beforeImage String?
  afterImage  String?
  createdAt   DateTime @default(now())
}

model Service {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  price       Float
  bookings    Booking[]
}

model Booking {
  id        Int      @id @default(autoincrement())
  clientId  Int
  serviceId Int
  date      DateTime
  status    String
  client    Client   @relation(fields: [clientId], references: [id])
  service   Service  @relation(fields: [serviceId], references: [id])
}
